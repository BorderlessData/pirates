  font-size:
}

text.year {
  fill: $qz-map-highlight;
  font-family: 'AdelleSans-Regular', Helvetica, Arial, sans-serif;
  -webkit-font-smoothing: antialiased;
  text-anchor: middle;
  font-size: 750%;
  opacity: 0.5;
}

path.arrow {
  stroke-width: 1px;
  stroke: $qz-body-black;
  fill: none;
}

.somalia {
  text {
    fill: $qz-body-black;
    font-family: 'AdelleSans-Bold', Helvetica, Arial, sans-serif;
    -webkit-font-smoothing: antialiased;
  }
}

.controls {
  polygon {
    fill: $qz-map-highlight;
  }

  text {
    fill: $qz-map-highlight;
    font-family: 'AdelleSans-Regular', Helvetica, Arial, sans-serif;
    -webkit-font-smoothing: antialiased;
    font-size: 300%;
  }
}

.play {
  fill: blue;
  opacity: 0;

  &:hover {
    cursor: pointer;
  }
}

@media screen and (max-width: 600px) {
  .attacks path {
    stroke-width: 0;
  }
}
