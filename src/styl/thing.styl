// Interactive-specific css here

svg {
  background-color: $qz-map-water;
}

.borders path {
  stroke: $qz-map-land-stroke;
  stroke-width: 1px;
  fill: $qz-map-land-fill;

  &#SOM {
    fill: $qz-gray-2;
  }
}

.attacks path {
  stroke: $qz-background-gray;
  stroke-width: 1px;
  stroke-opacity: 50%;
  fill: $qz-map-highlight;
  opacity: 0.5;
  width: 50%;
}

.labels text {
  fill: $qz-gray-3;
  font-family: 'AdelleSans-Regular', Helvetica, Arial, sans-serif;
